<div class="container-fluid" style="padding-top: 60px; padding-bottom: 60px;">
    <% if(travel !== null && Object.keys(travel).length > 0 ) { %>
        <%- include('partials/travel-tile', {travel: travel}); %>
    <% } %>
    <div class="mb-3">
        <form id="destinations-fieldset" class="row">
            <% if(travel !== null && Object.keys(travel).length > 0 ) { %>
            <input name="travel_id" type="hidden" readonly value="<%= travel.id %>" />
            <%}%>
            <legend><i class="bi bi-list-ol me-1"></i> Add destinations to your trip !</legend>
            <div class="d-flex justify-content-center mb-2">
                <a class="colorful-btn rounded-circle d-flex align-items-center justify-content-center p-2" id="add-destination-btn"><i class="bi bi-plus-circle d-flex justify-content-center align-items-center"></i></a>
            </div>
            <div id="destination-area">
    
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <button class="colorful-btn px-2 py-1 d-flex align-items-center" type="submit" style="line-height: 16px; box-shadow: 0px 10px 15px rgba(68, 97, 242, 0.4);"><i class="bi bi-check-circle"></i><span class="ms-1">Add</span></button>
            </div>
        </form>
    </div>
</div>
