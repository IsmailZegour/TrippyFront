<div class="d-flex flex-column">
    <div id="chat" class="container-fluid d-flex flex-column" style="padding-top: 60px; padding-bottom: 60px;">

    </div>
    <form id="chat-form" style="height: 60px;">
        <input type="hidden" id="chat-receiver" value="<%= user.id%>" readonly="readonly"/>
        <input type="hidden" id="chat-id" value="<%= conversation._id%>" readonly="readonly"/>
        <div class="input-group">
            <input id="chat-bar" type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary colorful-btn d-flex justify-content-center align-items-center" type="submit" id="button-addon2"><i class="bi bi-arrow-right-circle-fill"></i></button>
        </div>
        
    </form>
</div>

    <!--Socket.io-->
    <script src="/socket.io/socket.io.js"></script>
    <!--Chat.js-->
    <script src="/js/chat.js"></script>
<script>
    window.onload = function(){
        socket.emit('join', document.getElementById("chat-id").value);
    }
</script>
